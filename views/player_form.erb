<div class="container playerSelect">
  <div class="card">
    <h1 id="playerSelectHeader">Let's Play Cat Clue</h1>

    <h3>Pick your characters. (Note that no two users can play the same character)</h3>
    <form action="/start/new_players" method="post">
      <div class="form-group">
        <label for="player1">Player 1 Select Character:</label>
        <select name="player1" type='text' class="form-control">
          <% @characters.shuffle.each do |character| %>
          <option value="<%= character.card_name %>"><%= character.card_name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="player2">Player 2 Select Character:</label>
        <select name="player2" type='text' class="form-control">
          <% @characters.shuffle.each do |character| %>
          <option value="<%= character.card_name %>"><%= character.card_name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="player3">Player 3 Select Character:</label>
        <select name="player3" type='text' class="form-control">
          <% @characters.shuffle.each do |character| %>
          <option value="<%= character.card_name %>"><%= character.card_name %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="player4">Player 4 Select Character:</label>
        <select name="player4" type='text' class="form-control">
          <% @characters.shuffle.each do |character| %>
          <option value="<%= character.card_name %>"><%= character.card_name %></option>
          <% end %>
        </select>
      </div>
    <button type="submit" class="btn btn-primary">Let's Go!</button>
    </form>
  </div>
</div>
